<UserControl x:Class="SatUI.TextAreaInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatUI"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
    <Grid Margin="0,3" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ItemName" Content="Item Name" FontSize="14" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0" HorizontalAlignment="Left"/>
        <TextBox x:Name="Text" Margin="5,0" TextWrapping="Wrap" Text="TextBox" Padding="0,2" VerticalContentAlignment="Center" Grid.Row="1" AcceptsReturn="True" MaxHeight="100" VerticalScrollBarVisibility="Auto"  KeyboardNavigation.DirectionalNavigation="None"/>
    </Grid>
</UserControl>
