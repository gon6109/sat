<UserControl x:Class="SatUI.TextOutput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatUI"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
    <Grid Margin="0,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="ItemName" Content="Item Name" VerticalAlignment="Center" FontSize="14" Padding="5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0"/>
        <Label x:Name="Output" Content="Label" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="5,0" HorizontalContentAlignment="Center" Margin="0" Grid.Column="1" Height="16" Width="38" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
